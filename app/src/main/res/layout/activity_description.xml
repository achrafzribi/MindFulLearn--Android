        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/liew"
        android:layout_width="163dp"
        android:layout_height="53dp"
        android:layout_marginTop="44dp"
        android:text="salaire 2400$"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTv"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/postulerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Postuler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/liew"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="80dp"
        android:layout_height="27dp"
        android:layout_marginTop="188dp"
        android:textSize="20dp"
        android:layout_marginEnd="16dp"
        android:text="title"
        app:layout_constraintEnd_toStartOf="@+id/title"
        app:layout_constraintTop_toTopOf="@+id/logoIv" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="106dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:text="Description"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="81dp"
        android:layout_height="37dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="32dp"
        android:text="Local"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/liew"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />
</androidx.constraintlayout.widget.ConstraintLayout>